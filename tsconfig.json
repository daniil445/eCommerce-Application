{
  "compilerOptions": {
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "module": "es6",
    "target": "es5",
    "outDir": "./dist/",
    "strict": true,
    "moduleResolution": "node",
    "allowJs": true
  },
  "include": [
    "src/*",
    ".eslintrc.json",
    "src/index.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}